{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "outDir": "build"
  },
  "include": [
    "client/*.ts",
    "client/**/*.ts",
    "server/*.ts",
    "server/**/*.ts",
    "test/*.ts",
    "test/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
